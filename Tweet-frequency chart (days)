import pandas as pd
import datetime
import csv
from dateutil import parser
import dateutil.parser
import calendar
import matplotlib.pyplot as plt

#reading csv as a pandas dataframe
helen_tweet = pd.DataFrame.from_csv('helen_text.csv', sep='\t')

#converting date to datetime then getting the weekday 
helen_tweet['Date'] = helen_tweet['Date'].apply(lambda x: (dateutil.parser.parse(x, ignoretz= True)).weekday())
helen_tweet['Date'] = helen_tweet['Date'].apply(lambda x: calendar.day_name[x])

#plotting frequency of tweets per day
fig, ax = plt.subplots()
helen_tweet['Date'].value_counts().plot(ax=ax, kind='bar')
